<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="ScoreDialog" parent="AdwDialog">
    <property name="content-width">360</property>
    <property name="content-height">420</property>
    <child>
      <object class="AdwToolbarView" id="toolbar_view">
        <property name="bottom-bar-style">raised</property>
        <property name="reveal-bottom-bars">False</property>
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <property name="title-widget">
              <object class="GtkMenuButton" id="layout_button">
                <property name="visible">False</property>
              </object>
            </property>
          </object>
        </child>
        <property name="content">
          <object class="GtkStack" id="content_stack">
            <child>
              <object class="GtkStackPage">
                <property name="name">no-scores</property>
                <property name="child">
                  <object class="AdwStatusPage">
                    <property name="title" translatable="yes">No Scores</property>
                    <property name="description" translatable="yes">Finish a game to see scores</property>
                    <property name="icon-name">starred-symbolic</property>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">scores</property>
                <property name="child">
                  <object class="GtkScrolledWindow">
                    <child>
                      <object class="GtkColumnView" id="score_view">
                        <property name="reorderable">False</property>
                        <property name="tab-behavior">item</property>
                        <child>
                          <object class="GtkColumnViewColumn" id="player_column">
                            <property name="title" translatable="yes">Player</property>
                            <property name="expand">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkColumnViewColumn" id="time_column">
                            <property name="title" translatable="yes">Time</property>
                            <property name="expand">True</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkColumnViewColumn" id="date_column">
                            <property name="title" translatable="yes">Date</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
        <child type="bottom">
          <object class="GtkStack" id="bottom_stack">
            <child>
              <object class="GtkStackPage">
                <property name="child">
                  <object class="GtkActionBar">
                    <child type="center">
                      <object class="GtkButton" id="clear_scores_button">
                        <property name="label">Clear Scoresâ€¦</property>
                        <property name="can-shrink">True</property>
                        <style>
                          <class name="pill"/>
                          <class name="destructive-action"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">new-game</property>
                <property name="child">
                  <object class="GtkActionBar">
                    <child type="center">
                      <object class="GtkButton" id="new_game_button">
                        <property name="label">_New Game</property>
                        <property name="action-name">app.new-game</property>
                        <property name="can-shrink">True</property>
                        <property name="use-underline">True</property>
                        <style>
                          <class name="pill"/>
                          <class name="suggested-action"/>
                        </style>
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkButton">
                        <property name="label">_Quit</property>
                        <property name="action-name">app.quit</property>
                        <property name="can-shrink">True</property>
                        <property name="has-frame">False</property>
                        <property name="use-underline">True</property>
                        <property name="valign">center</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
